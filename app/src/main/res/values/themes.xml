<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HackHerStarterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_hack_her</item>
        <item name="colorPrimaryVariant">@color/blue_hack_her</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_hack_her</item>
        <item name="colorSecondaryVariant">@color/pink_hack_her</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HackHerStarterApp" parent="Base.Theme.HackHerStarterApp" />

    <style name="Theme.HackHerStarterApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">
            @style/Theme.HackHerStarterApp.BottomNavigationView.Overlay
        </item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="Theme.HackHerStarterApp.BottomNavigationView.Overlay" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorSurface">@color/black_hack_her</item>
    </style>
</resources>